        <race>RWBMaxolotl</race>
        <combatPower>85</combatPower>
        <canArriveManhunter>true</canArriveManhunter>
        <wildSpawn_spawnWild>true</wildSpawn_spawnWild>
        <lifeStages>
            <li>
                <bodyGraphicData>
                    <texPath>Pawns/Caves/Animals/Maxolotl/Maxolotl</texPath>
