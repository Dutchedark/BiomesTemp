<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <!--  Slime  -->
    <ThingDef ParentName="AnimalThingBase">
        <defName>RWBSlime</defName>
        <label>slime</label>
        <description>A moving mass of goo, this bizarre creature is actually millions of microorganisms working in tandem. Due to the fact that its flesh is acidic they have virtually no natural predators. Their slime can be used to craft dangerous moats and can be used as a bio-fuel.</description>
        <butcherProducts>
            <RWBSlimeChunk>10</RWBSlimeChunk>
        </butcherProducts>
        <statBases>
            <MoveSpeed>2.8</MoveSpeed>
            <ComfyTemperatureMin>-50</ComfyTemperatureMin>
            <MarketValue>300</MarketValue>
            <ArmorRating_Blunt>0.35</ArmorRating_Blunt>
            <LeatherAmount>0</LeatherAmount>
            <MeatAmount>0</MeatAmount>
        </statBases>
        <tools>
            <li>
                <capacities>
                    <li>Bite</li>
                </capacities>
                <power>7</power>
                <cooldownTime>1.65</cooldownTime>
                <linkedBodyPartsGroup>Mouth</linkedBodyPartsGroup>
            </li>
            <li>
                <label>head</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>5</power>
                <cooldownTime>1.65</cooldownTime>
                <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
                <commonality>0.2</commonality>
            </li>
        </tools>
        <race>
            <predator>true</predator>
            <body>RWBSlime</body>
            <herdAnimal>false</herdAnimal>
            <baseBodySize>1.0</baseBodySize>
            <baseHungerRate>0.5</baseHungerRate>
            <baseHealthScale>2.2</baseHealthScale>
            <foodType>CarnivoreAnimalStrict</foodType>
            <gestationPeriodDays>22.5</gestationPeriodDays>
            <trainableIntelligence>Simple</trainableIntelligence>
            <wildness>0.997</wildness>
            <lifeExpectancy>12</lifeExpectancy>
            <lifeStageAges>
                <li>
                    <def>AnimalJuvenile</def>
                    <minAge>0.0</minAge>
                </li>
                <li>
                    <def>AnimalAdult</def>
                    <minAge>0.5</minAge>
                </li>
            </lifeStageAges>
            <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
            <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
            <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
        </race>
        <comps>
