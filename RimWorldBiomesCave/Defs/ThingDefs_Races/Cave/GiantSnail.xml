        <lifeStages>
            <li>
                <bodyGraphicData>
                    <texPath>Pawns/Caves/Animals/GiantSnail/GiantSnail</texPath>
                    <drawSize>3</drawSize>
                    <color>(224,233,205)</color>
                </bodyGraphicData>
                <dessicatedBodyGraphicData>
                    <texPath>Things/Pawn/Animal/Dessicated/CritterDessicatedSmall</texPath>
                    <drawSize>1.3</drawSize>
                </dessicatedBodyGraphicData>
            </li>
            <li>
                <bodyGraphicData>
                    <texPath>Pawns/Caves/Animals/GiantSnail/GiantSnail</texPath>
                    <drawSize>5.4</drawSize>
                    <color>(224,233,205)</color>
                </bodyGraphicData>
                <dessicatedBodyGraphicData>
                    <texPath>Things/Pawn/Animal/Muffalo/MuffaloDessicated</texPath>
                    <drawSize>5</drawSize>
                </dessicatedBodyGraphicData>
            </li>
        </lifeStages>
    </PawnKindDef>
    
    <ThingDef ParentName="ApparelBase">
        <defName>RWBSnailDefense</defName>
        <label>snail defense</label>
        <techLevel>Animal</techLevel>
        <description>you should not see this</description>
        <graphicData>
            <texPath>Things/Apparel/InvisibleArmor/InvisibleArmor</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <statBases>
            <MaxHitPoints>100000</MaxHitPoints>
            <Mass>1.2</Mass>
        </statBases>
        <thingCategories>
            <li>Apparel</li>
        </thingCategories>
        <generateCommonality>0</generateCommonality>
        <equippedStatOffsets>
            <MoveSpeed>-3</MoveSpeed>
        </equippedStatOffsets>
        <apparel>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
            <wornGraphicPath>Things/Apparel/InvisibleArmor/InvisibleArmor</wornGraphicPath>
            <layers>
                <li>Middle</li>
                <li>Shell</li>
            </layers>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Mouth</li>
                <li>Eyes</li>
                <li>FullHead</li>
                <li>UpperHead</li>
            </bodyPartGroups>
        </apparel>
    </ThingDef>
</Defs>
