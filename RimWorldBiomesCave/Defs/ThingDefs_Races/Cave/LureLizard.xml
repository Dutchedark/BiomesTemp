    <ThingDef ParentName="AnimalThingBase">
        <defName>RWBLureLizard</defName>
        <label>lurelizard</label>
        <tickerType>Normal</tickerType>
        <description>This dark reptile inhabits the salty waters of caverns that border the sea. It uses its bioluminescent tail tip to lure its prey.</description>
        <statBases>
            <MoveSpeed>4.93</MoveSpeed>
            <ComfyTemperatureMin>-65</ComfyTemperatureMin>
            <MarketValue>250</MarketValue>
            <LeatherAmount>0</LeatherAmount>
