<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    
    <!--  Bovine Beetle  -->
    <ThingDef ParentName="BaseInsect">
        <defName>RWBBovineBeetle</defName>
        <label>bovine Beetle</label>
        <description>This gigantic relative of the ladybug is one of the few creatures in the caverns worth keeping as livestock. Providing a conglomerate of different resources, from chitin when killed and honeydew when milked, and being quite easy to tame it is of considerable use to any cave dweller. </description>
        <butcherProducts>
            <RWBChitin>40</RWBChitin>
        </butcherProducts>
        <statBases>
            <MoveSpeed>3.3</MoveSpeed>
            <ArmorRating_Blunt>0.1</ArmorRating_Blunt>
            <ArmorRating_Sharp>0.3</ArmorRating_Sharp>
            <ComfyTemperatureMin>0</ComfyTemperatureMin>
            <MarketValue>100</MarketValue>
            <LeatherAmount>0</LeatherAmount>
        </statBases>
        <tools>
            <li>
                <capacities>
                    <li>Bite</li>
                </capacities>
                <power>8</power>
                <cooldownTime>1.85</cooldownTime>
                <linkedBodyPartsGroup>Mouth</linkedBodyPartsGroup>
            </li>
            <li>
                <label>head</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>5</power>
                <cooldownTime>1.65</cooldownTime>
                <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
                <commonality>0.2</commonality>
            </li>
        </tools>
        <comps>
            <li Class="CompProperties_Milkable">
                <milkDef>RWBHoneyDew</milkDef>
                <milkIntervalDays>1</milkIntervalDays>
                <milkAmount>15</milkAmount>
                <milkFemaleOnly>false</milkFemaleOnly>
            </li>
            <li Class="CompProperties_EggLayer">
                <eggFertilizedDef>RWBEggBovineBeetleFertilized</eggFertilizedDef>
                <eggFertilizationCountMax>1</eggFertilizationCountMax>
                <eggLayIntervalDays>20</eggLayIntervalDays>
                <eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
                <eggCountRange>1</eggCountRange>
            </li>
        </comps>
        <race>
            <trainableIntelligence>Advanced</trainableIntelligence>
            <packAnimal>true</packAnimal>
            <herdAnimal>true</herdAnimal>
            <herdMigrationAllowed>true</herdMigrationAllowed>
            <foodType>VegetarianRoughAnimal</foodType>
            <gestationPeriodDays>20</gestationPeriodDays>
            <fleshType>RWBInsectoid</fleshType>
            <body>BeetleLike</body>
            <baseBodySize>2.1</baseBodySize>
            <baseHungerRate>0.85</baseHungerRate>
            <baseHealthScale>1.25</baseHealthScale>
            <wildness>0.5</wildness>
            <lifeExpectancy>10</lifeExpectancy>
            <lifeStageAges>
                <li>
                    <def>RWBInsectGrub</def>
                    <minAge>0</minAge>
                </li>
                <li>
                    <def>RWBInsectAdult</def>
                    <minAge>0.4</minAge>
                    <soundWounded>Pawn_BovineBeetle_Wounded</soundWounded>
                    <soundDeath>Pawn_Megascarab_Death</soundDeath>
                    <soundCall>Pawn_BovineBeetle_Call</soundCall>
                    <soundAngry>Pawn_BovineBeetle_Angry</soundAngry>
                </li>
            </lifeStageAges>
            <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
            <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
            <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
        </race>
        <tradeTags>
            <li>Insectoid</li>
        </tradeTags>
    </ThingDef>
    
    <PawnKindDef ParentName="AnimalKindBase">
        <defName>RWBBovineBeetle</defName>
        <label>bovine Beetle</label>
        <race>RWBBovineBeetle</race>
        <combatPower>80</combatPower>
        <canArriveManhunter>true</canArriveManhunter>
        <wildSpawn_EcoSystemWeight>0.05</wildSpawn_EcoSystemWeight>
        <wildSpawn_spawnWild>true</wildSpawn_spawnWild>
        <lifeStages>
            <li>
                <bodyGraphicData>
                    <texPath>Pawns/Caves/Animals/Grub/Grub</texPath>
                    <drawSize>1.5</drawSize>
                    <color>(224,233,205)</color>
                </bodyGraphicData>
                <dessicatedBodyGraphicData>
                    <texPath>Things/Pawn/Animal/Dessicated/CritterDessicatedSmall</texPath>
                    <drawSize>1.3</drawSize>
                </dessicatedBodyGraphicData>
            </li>
            <li>
                <bodyGraphicData>
                    <texPath>Pawns/Caves/Animals/BovineBeetle/BovineBeetle</texPath>
                    <drawSize>3</drawSize>
                    <color>(224,233,205)</color>
                </bodyGraphicData>
                <dessicatedBodyGraphicData>
                    <texPath>Things/Pawn/Animal/Muffalo/MuffaloDessicated</texPath>
                    <drawSize>2.5</drawSize>
                </dessicatedBodyGraphicData>
            </li>
        </lifeStages>
    </PawnKindDef>
</Defs>
