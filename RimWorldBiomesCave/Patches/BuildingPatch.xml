        <success>Always</success>
        <operations>
            <li Class="PatchOperationRemove">
                <xpath>Defs/ThingDef[defName = "WoodFiredGenerator"]/label</xpath>
            </li>
            <li Class="PatchOperationAdd">
                <xpath>Defs/ThingDef[defName = "WoodFiredGenerator"]</xpath>
